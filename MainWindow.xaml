<Window x:Class="_4Gewinnt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4Gewinnt"
        mc:Ignorable="d"
        Title="4 Gewinnt" Height="500" Width="525">
    <DockPanel LastChildFill="True">
        <DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Left"  FontSize="16" Margin="3" Width="120" Click="btnOptions_Click">Optionen</Button>
            <Button DockPanel.Dock="Left" FontSize="16" Margin="3" Width="120" Click="btn_Reset_Click">Reset</Button>
            <DockPanel></DockPanel>
        </DockPanel>
        <TextBlock DockPanel.Dock="Bottom" Height="20" FontSize="16" Margin="3"  Name="Textblock_Status"></TextBlock>
        <Viewbox Stretch="Fill"  DockPanel.Dock="Bottom">
            <UniformGrid Name="Board" Background="LightGray" Height="45" Width="100">

            </UniformGrid>
        </Viewbox>
            
        </DockPanel>
</Window>
